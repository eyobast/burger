
<img src="./assets/img/burger.png" alt="Big burger" style="width:200px;height:250px;">

<h1>Eat-Da-Burger!</h1>
<div class="container">
	<div class="row">
		<div class="col-md-6">
			<p><h2>Not devoured</h2></p>
			<ul>
				{{!-- FOR EACH burger in burgers --}}
				{{#each burgers}}
					{{!-- UNLESS the burger is devoured === if burger is NOT devoured --}}
					{{#unless this.devoured}}
						<li>
						{{this.id}}.{{this.burger_name}}
						{{!-- Requesting PUT '/:id' on click submit --}}
						<form action="/{{this.id}}?_method=PUT" method="POST">
				          <button type="submit">Devour It</button>
				        </form>
						</li>
					{{/unless}}
				{{/each}}
			</ul>
		</div>
<div class="col-md-6">
<p><h2>Devoured</h2></p>
<ul>
	{{!-- FOR EACH burger in burgers --}}
	{{#each burgers}}
		{{!-- IF burger IS devoured --}}
		{{#if this.devoured}}
			<li>
			{{this.id}}.{{this.burger_name}}
			</li>
		{{/if}}
	{{/each}}
</ul>
</div>
</div>
{{!-- Requesting POST '/create' on click submit --}}
<form method="POST" action="/create">
	{{!-- Input name will be "burger" //BACKEND: req.body.burger --}}
	<textarea type="text" name="burger"></textarea>
	<button type="submit">Submit</button>
	<p>Enter a burger you want to eat and click the "submit" button!</p>
</form>
